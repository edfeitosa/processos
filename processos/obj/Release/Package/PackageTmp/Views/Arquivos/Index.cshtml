@{
    string pag;
    if (Request.QueryString["pag"] == null)
    {
        pag = "1";
    }
    else
    {
        pag = Request.QueryString["pag"];
    }
}

<h1>Arquivos</h1>

@Ferramentas.PadraoIndex("Arquivos".ToString())
<p>Arquivos relacionados a processos cadastrados no sistema</p>
<div id="read"></div>
<div id="pagination"></div>
@Forms.Hidden("Arq_id", "0")
<script type="text/javascript" src="@Url.Content("~/Scripts/System/arquivos.js")"></script>
<script type="text/javascript">
    jQuery(document).ready(function () {
        Read(10, parseInt(@pag));
        Delete(10, parseInt(@pag));
    });
</script>