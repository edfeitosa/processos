        @if (novo == true)
        {
            <div class="botao">
                <a href="~/@view/Create">
                    <img src="~/Imagens/novo.png" alt="novo" title="Novo" />
                </a>
                <br />
                Novo
                <div class="clear"></div>
            </div>
        }
        <div class="botao">
            <img src="~/Imagens/salvar.png" alt="salvar" id="salvar" title="Salvar dados" />
            <br />
            Salvar
            <div class="clear"></div>
        </div>
        @if (listar == true)
        {
            <div class="botao">
                <a href="~/@view">
                    <img src="~/Imagens/fechar.png" alt="fechar" title="Fechar" />
                </a>
                <br />
                Fechar
