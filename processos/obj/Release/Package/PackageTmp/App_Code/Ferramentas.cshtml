<!-- Barra de ferramentas home -->
@helper BotaoHome(bool voltar)
{
    <div class="barraFerramentas">
        @if (voltar == true)
        {
            <div class="botao">
                <img src="~/Imagens/voltar.png" alt="voltar" title="Voltar" id="voltar" />
                <br />
                Voltar
            </div>
        }
        <div class="botao">
            <a href="~/Home">
                <img src="~/Imagens/home.png" alt="home" title="Painel de Administração" />
            </a>
            <br />
            Início
            <div class="clear"></div>
        </div>
        <div id="novosBotoes"></div>
    </div>
}

