@{
    string pag;
    if (Request.QueryString["pag"] == null)
    {
        pag = "1";
    }
    else
    {
        pag = Request.QueryString["pag"];
    }
}

<h2>Usuários</h2>

<h3 id="mapPag"></h3>
@Ferramentas.PadraoIndex("Usuarios".ToString())
<p>Usuários cadastrados no sistema</p>
<div id="read"></div>
<div id="pagination"></div>
@Forms.Hidden("Usu_id", "0")
<script type="text/javascript" src="@Url.Content("~/Scripts/System/usuarios.js")"></script>
<script type="text/javascript">
    jQuery(document).ready(function () {
        Read(10, parseInt(@pag));
        Delete(10, parseInt(@pag));
    });
</script>